<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs360.studyhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.cs360.studyhelper.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName="com.cs360.studyhelper.SubjectActivity" />
        <activity
            android:name="com.cs360.studyhelper.QuestionEditActivity"
            android:parentActivityName="com.cs360.studyhelper.QuestionActivity" />
        <activity
            android:name="com.cs360.studyhelper.QuestionActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.cs360.studyhelper.SubjectActivity" />
        <activity android:name="com.cs360.studyhelper.SubjectActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>